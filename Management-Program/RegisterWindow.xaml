<Window x:Class="Management_Program.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_Program"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="18,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserBox" HorizontalAlignment="Center" Background="LightGray" Height="23" Margin="0,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="UserBox_TextChanged"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="18,133,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PassBox" HorizontalAlignment="Left" Background="LightGray" Height="23" Margin="86,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="PassBox_TextChanged"/>
        <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="150,205,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="53,205,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
