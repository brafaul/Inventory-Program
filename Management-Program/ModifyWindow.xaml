<Window x:Class="Management_Program.ModifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_Program"
        mc:Ignorable="d"
        Title="ModifyWindow" Height="300" Width="300">
    <Grid>
        <Label Content="ID or Name of Item" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IDMBox" Background="LightGray" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="IDMBox_TextChanged"/>
        <Label Content="Change Amount To" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ATBox" Background="LightGray" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ATBox_TextChanged"/>
        <Button x:Name="ConfirmButton" Content="Button" HorizontalAlignment="Left" Margin="158,239,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
    </Grid>
</Window>
