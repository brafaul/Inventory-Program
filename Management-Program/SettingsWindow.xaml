<Window x:Class="Management_Program.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_Program"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300">
    <Viewbox>
        <Grid>
            <Label Content="Change List Color" HorizontalAlignment="Center" Margin="10,10,179,0" VerticalAlignment="Top"/>
            <TextBox x:Name="ColorBlock" HorizontalAlignment="Left" Background="LightGray" Height="23" Margin="118,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="ColorBlock_TextChanged"/>
            <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="163,239,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="38,239,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

        </Grid>
    </Viewbox>
</Window>
